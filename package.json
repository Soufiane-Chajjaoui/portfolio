{
  "name": "portfolio",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "build:ssr": "ng build --configuration production && npm run build:server",
    "build:server": "tsc -p server.tsconfig.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:portfolio": "node dist/portfolio/server/server.mjs",
    "analyze": "ng build --stats-json && webpack-bundle-analyzer dist/portfolio/browser/stats.json",
    "deploy": "ng build --configuration production --base-href=/ && npx angular-cli-ghpages --dir=dist/portfolio/browser"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/platform-server": "^17.3.0",
    "@angular/router": "^17.3.0",
    "@angular/ssr": "^17.3.0",
    "@ngx-translate/core": "^17.0.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "highlight.js": "^11.9.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.0",
    "@angular/cli": "^17.3.0",
    "@angular/compiler-cli": "^17.3.0",
    "@tailwindcss/typography": "^0.5.10",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/highlight.js": "^10.1.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "angular-cli-ghpages": "^2.0.3",
    "autoprefixer": "^10.4.22",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.4.2"
  }
}